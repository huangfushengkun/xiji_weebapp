.full-screen {
    overflow-x: hidden;
  }
  
  .full-screen header {
    width: 100%;
    height: 0.76rem;
    position: relative;
    overflow-x: hidden;
    border-bottom: 0.02rem solid #e8e8e8;
  }
  
  .full-screen header .a-bar {
    width: 100%;
    height: 0.76rem;
    padding: 0.14rem 0;
    float: left;
  }
  
  .full-screen header .a-bar img {
    width: 0.44rem;
    height: 0.44rem;
    position: absolute;
    left: 0;
    top: 0;
  }
  
  .full-screen header .a-bar .a-back {
    display: inline-block;
    width: 0.44rem;
    height: 0.44rem;
    position: absolute;
    top: 0.14rem;
    left: 0.2rem;
    margin: 0;
    text-align: center;
  }
  
  .full-screen header .a-bar .a-name {
    color: #28282e;
    font-size: 0.32rem;
    padding: 0 0.9rem;
    margin: 0;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  
  .full-screen header .a-bar .a-right .a-home {
    position: absolute;
    top: 0.14rem;
    right: 0.2rem;
    width: 0.44rem;
    height: 0.44rem;
    text-decoration: none;
    color: #000;
  }
  .full-screen .change-password{
      padding: 0 0.2rem;
      height: 1rem;
      position: relative;
      border-bottom: 0.02rem solid #e8e8e8;
  }
  .full-screen .change-password a{
      display: block;
    height: 1rem;
    line-height: 1rem;
    padding-left: 0.2rem;
}
  .full-screen .change-password a span{
    position: absolute;
    top: 0;
    left: 0.4rem;
    font-size: 0.28rem;
    color: #666;
}
  .full-screen .change-password img{
      width: 0.24rem;
      height: 0.24rem;
      position: absolute;
      top: 0.44rem;
      right: 0.4rem;
  }
  .full-screen footer{
      margin-top: 2.2rem;
  }
  .full-screen footer .home-to-top {
    text-align: center;
    color: #ccc;
    font-size: 0.24rem;
    border-bottom: 0.02rem solid #eee;
  }
  
  .full-screen footer .home-to-top .footerlogin {
    height: 0.96rem;
    line-height: 0.96rem;
  }
  
  .full-screen footer .home-to-top a {
    display: inline-block;
    width: auto;
    color: #999;
    font-size: 0.24rem;
    padding: 0 0.2rem;
    vertical-align: middle;
  }
  
  .full-screen footer .home-to-top .footerlogout {
    display: none;
  }
  
  .full-screen footer .home-to-top .footerlogout span a {
    display: inline-block;
    width: 20%;
    color: #ec8141;
  }
  
  .full-screen footer .footer {
    font-size: 0.2rem;
    background-color: #fff !important;
  }
  
  .full-screen footer .footer p {
    display: block;
    margin-top: 0.34rem;
    height: 1.46rem;
    padding: 0 0.2rem 0.6rem 0.2rem;
    text-align: center;
    line-height: 2;
  }
  
  .full-screen footer .footer p span {
    color: rgb(130, 130, 130);
  }