@charset "utf-8";
header{
    width: 7.5rem;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 8;
    background: #fff;
    border-bottom: none;;
    height: .76rem;
}
header .a-bar{
    width: 100%;
    padding: .14rem 0 .12rem;
}
header .a-bar .a-back{
    display: block;
    width: 0.44rem;
    height: 0.44rem;
    text-indent: -999rem;
    position: absolute;
    top: 0.14rem;
    left: 0.2rem;
    color: #333;
    text-align: center;
    line-height: 25px;
    background: url(../images/arr_left_2x_160705.png) top left no-repeat;
}
@media (-webkit-min-device-pixel-ratio: 2){
    header .a-bar .a-back {
        background: url(../images/arr_left_2x_160705.png) top left no-repeat;
        background-size: 22px 22px;
    }
}
header .a-bar .a-name{
    color: #28282e;
    font-size: 0.32rem;
    text-align: center;
    padding: 0 0.9rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
header .a-bar .a-hone{
    display: block;
    width: 0.44rem;
    height: 0.44rem;
    text-indent: -999rem;
    position: absolute;
    top: 0.14rem;
    right: 0.2rem;
    text-align: center;
    line-height: 25px;
    background: url(../images/home_btn_2x_160705.png) top left no-repeat;
    background-size: 22px 22px;
}

